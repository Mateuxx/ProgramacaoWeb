<div class="d-flex justify-content-between">
<h3>Cursos</h3>
<div><a href="/major/create" class="btn btn-primary"> + </a></div>
</div>
<table class="table table-hover">
  <thead>
    <th scope="col">Sigla </th>
    <th scope="col">Nome </th>
    <th scope="col" style="text-align: right;"> Opções </th>
  </thead>
    <tbody>
      {{#each majors}}
        <tr>
          <th scope="row" style="vertical-align: middle;">{{code}}</th>
          <td style="vertical-align: middle;">{{name}}</td>
          <td  style="text-align: right;"> 
            <a href="/major/read/{{id}}" class="btn btn-primary"> Ver</a>
            <a href="/major/update/{{id}}" class="btn btn-warning"> Editar</a>
            <form action="/major/remove/{{id}}" method="post" style="display:inline;">
            <button type="submit" class="btn btn-danger">Remover</button>
          </form>
          </td>
        </tr>   
      {{/each}}
    </tbody>
</table> 